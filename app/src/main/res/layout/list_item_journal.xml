<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_cir_bg"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="@string/app_name"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text1"
                android:layout_margin="@dimen/dp_8"/>

            <TextView
                android:id="@+id/pkh_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"
               android:layout_toStartOf="@+id/more"
                android:textColor="@color/text1"
                android:layout_toLeftOf="@+id/more" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/more"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/backg"
            android:layout_marginBottom="@dimen/dp_8"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rz_address"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img"
                android:textColor="@color/text3"
                android:layout_marginLeft="@dimen/dp_8"
                tools:text="潢川县"
                android:layout_toRightOf="@+id/img"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_toStartOf="@+id/publics"
                android:layout_toLeftOf="@+id/publics" />

            <TextView
                android:id="@+id/publics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公开"
                android:textColor="@color/text3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_log"
                android:layout_marginStart="@dimen/dp_8" />

            <TextView
                android:id="@+id/time"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text3"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>