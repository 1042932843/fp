<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="@dimen/dp_16">
    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />



    <RelativeLayout
        android:focusableInTouchMode="true"
        android:id="@+id/fp_name_layout"
        android:layout_below="@+id/layout_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:padding="@dimen/dp_2">
        <ImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:src="@drawable/def_women"
            />

        <TextView
            android:id="@+id/fp_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/head"
            android:gravity="center|left"
            tools:text="@string/app_name"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@+id/head" />

        <TextView
            android:id="@+id/choice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_action_down"
            android:text="更改"
            android:gravity="center"
            android:layout_alignParentRight="true" />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/gray_20">

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_below="@+id/fp_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        >
        <TextView
            android:id="@+id/time"
            android:drawableLeft="@drawable/rz_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            tools:text="@string/app_name"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/gray_20">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_layout"
        android:layout_below="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8">
        <TextView
            android:id="@+id/address"
            android:drawableLeft="@drawable/rz_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            tools:text="@string/app_name"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/gray_20">

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_below="@+id/add_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8">
        <TextView
            android:id="@+id/content"
            android:drawableLeft="@drawable/rz_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:hint="详细描述"/>

    </RelativeLayout>
    <com.dyhl.dusky.huangchuanfp.Design.keyEditText.KeyEditText
        android:layout_centerVertical="true"
        android:id="@+id/edit_text"
        android:background="@null"
        android:hint="输入..."
        android:layout_below="@+id/content_layout"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_height="@dimen/dp_180" />


    <android.support.v7.widget.RecyclerView
        android:layout_margin="@dimen/dp_8"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/edit_text"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="1"
        tools:listitem="@layout/item_image"/>
    <RelativeLayout
        android:id="@+id/line"
        android:layout_below="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/gray_20">

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_bar">

    </FrameLayout>


</RelativeLayout>
